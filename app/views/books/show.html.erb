
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book) %></td>
					<td><%= @book.body %></td>

					<% if @book.favorited_by?(current_user) %>
					<td>
						<%=link_to book_favorites_path(@book), method: :delete do %>
							<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
							<%= @book.favorites.count %>
						<% end %>
					</td>
					<% else %>
					<td>
						<%=link_to book_favorites_path(@book), method: :post do %>
							<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
							<%= @book.favorites.count %>
						<% end %>
					</td>
					<% end %>
					<td>コメント数:<%= @book.book_comments.count %></td>
					<!-- ログインユーザーのみ編集、削除 -->
					<% if @book.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
					<!-- ログインユーザーのみ編集、削除 -->
				</tr>
			</table>
			<!-- コメント表示 -->
			<table>
			<% @book_comments.each do |book_comment| %>
			  <tr>
			    <td>
				    <%=link_to user_path(book_comment.user) do %>
						<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg" ) %><br>
						<%= book_comment.user.name %>
					<% end %>
				</td>
				<td><%= book_comment.comment %></td>
				<% if current_user == book_comment.user %>

				  <td><%= link_to 'Destroy',book_book_comment_path(@book, book_comment), method: :delete, class: "btn-sm btn-danger" %></td>
					<% end %>
			  </tr>
			<% end %>
		  </table>
			<!-- コメント表示 -->
			<!-- コメント投稿 -->
			<div class="comment-form">
			  <%= form_for [@book, @book_comment] do |f| %>
				<%= f.text_area :comment, size: "90x5" %>
				<%= f.submit "送信", class: "btn-sm btn-primary" %>
			  <% end %>
			</div>
			<!-- コメント投稿 -->

	</div>
</div>

