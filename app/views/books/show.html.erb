
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

			<table class="table" >
				<tr id="book_<%= @book.id %>">
					<%= render 'show', book: @book %>
				</tr>
			</table>
			<!-- コメント表示 -->
			<table id="comment_<%= @book.id %>">
			    <%= render 'comment', book_comments: @book.book_comments %>
		    </table>
			<!-- コメント表示 -->
			<!-- コメント投稿 -->
			<%= render 'form', book: @book, book_comment: @book_comment %>
			<!-- コメント投稿 -->

	</div>
</div>

