<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	<tr>
		<th>follow</th>
		<th><%= link_to user.following.count, following_user_path(user) %></th>
	</tr>
	<tr>
		<th>follower</th>
		<th><%=link_to user.followers.count, followers_user_path(user) %></th>
	</tr>
</table>


<% if current_user != user %>
     <% if user.followed_by?(current_user) %>
		<%=link_to "フォロー外す", user_relationships_path(user), method: :delete, class:'btn btn-danger col-xs-12' %>
     <% else %>
		<%=link_to "フォローする", user_relationships_path(user), method: :post, class:'btn btn-primary col-xs-12' %>
	 <% end %>
<% end %>



<div class="row">
		<%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>